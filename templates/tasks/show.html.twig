{% extends 'base.html.twig' %}
  
{% block title %}Task{% endblock %}
  
{% block body %}
    <div class="container">
        <h2 class="text-center mt-5 mb-3">Show Task</h2>
        <div class="card">
            <div class="card-header">
                <a class="btn btn-outline-info float-right" href="{{ path('app_tasks_index') }}"> 
                    View All Tasks
                </a>
            </div>
            <div class="card-body">
                <b class="text-muted">Title:</b>
                <p>{{ task.title }}</p>
                <b class="text-muted">Description:</b>
                <p>{{ task.description }}</p>
            </div>
        </div>
    </div>
{% endblock %}